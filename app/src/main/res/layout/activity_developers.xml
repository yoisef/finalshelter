<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.life.shelter.people.homeless.Developers"
    android:background="@color/background_main">

    <ImageView
        android:id="@+id/imageview"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/dee" />


    <ListView
        android:id="@+id/android:list"
        style="@style/main_style"
        android:layout_height="223dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageview">

    </ListView>

    <LinearLayout
        style="@style/main_style"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/linear_style">

            <ImageView
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:src="@drawable/java"
                android:layout_marginLeft="5dp"/>

            <Button
                style="@style/button_style"
                android:text="@string/title_home"
                android:layout_marginTop="5dp"
                android:id="@+id/programming_team"


                />
        </LinearLayout>
        <LinearLayout
            style="@style/linear_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/xml"
                android:layout_marginLeft="5dp"/>
            <Button
                style="@style/button_style"
                android:text="@string/title_dashboard"
                android:id="@+id/xml_team"

                />
        </LinearLayout>


        <LinearLayout
            style="@style/linear_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/design"
                android:layout_marginLeft="5dp"
                />

            <Button
                style="@style/button_style"
                android:layout_marginTop="5dp"
                android:text="@string/title_notifications"
                android:id="@+id/designing_team"

                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

